                            <li class="nav-item">
                                <a class="nav-link" href="/api/cart">Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" id = "logout" href="#">Logout</a>
                            </li>
                        {{else}}
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" onclick="document.getElementById('id01').style.display='block'"
